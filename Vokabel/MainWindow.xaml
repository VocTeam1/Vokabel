                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="lbl_Ueberschrift" Content="Übersetze bitte dieses Wort:" Margin="133,43,0,0" FontSize="20" HorizontalAlignment="Left" Width="346" Height="37" VerticalAlignment="Top"/>
        <Label x:Name="lbl_User_Antwort" Content="" Margin="632,122,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="150"/>
        <Label x:Name="lbl_Richtige_Antwort" Content="" Margin="632,158,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="150"/>
        <Label x:Name="lbl_User" Content="Deine Antwort:" Margin="484,122,0,0" FontSize="16" HorizontalAlignment="Left" Width="124" Height="31" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Richtig" Content="Richtige Antwort:" HorizontalAlignment="Left" Margin="484,158,0,0" VerticalAlignment="Top" Width="138" FontSize="16"/>
        <TextBlock x:Name="txbl_Fragewort" Margin="99,100,0,0" TextWrapping="Wrap" RenderTransformOrigin="0.462,-0.014" TextAlignment="Center" FontWeight="Bold" Foreground="Black" FontSize="20" HorizontalAlignment="Left" Width="380" Height="58" VerticalAlignment="Top"/>
        <Image x:Name="img_Logo" Margin="599,10,0,0" Source="Developer ABC Kopie.png" Stretch="Fill" HorizontalAlignment="Left" Width="183" Height="70" VerticalAlignment="Top"/>

    </Grid>
