        <Button x:Name="btn_Antwort_3" Content="" Margin="353,307,0,0" FontSize="18" Click="Btn_Antwort_3_Click" Style="{DynamicResource btn_Antwort_1_Style}" HorizontalAlignment="Left" Width="265" Height="70" VerticalAlignment="Top">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Color="#FFA6A6A6"/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
