                    <GradientStop Color="#FFB9E2F5"/>
                    <GradientStop Color="#FF8AD1F1" Offset="0.257"/>
                    <GradientStop Color="#FF43A5DE" Offset="0.766"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btn_Antwort_1" Content="" Margin="44,209,0,0" FontSize="18" Click="Btn_Antwort_1_Click" Style="{DynamicResource btn_Antwort_1_Style}" HorizontalAlignment="Left" Width="265" Height="70" VerticalAlignment="Top">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Color="#FFA6A6A6"/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
